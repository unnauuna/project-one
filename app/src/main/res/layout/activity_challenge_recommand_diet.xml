<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#CDCDCD"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="7"
        android:text="나에게 맞는 식단 고르기"
        android:textColor="@color/dark_sea_green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="하루 식사 횟수"
                    android:textColor="@color/theme3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="-7dp"
                        android:onClick="onCheckboxClicked"
                        android:text="아침"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2" />

                    <CheckBox
                        android:id="@+id/cb_lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="점심"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2"/>

                    <CheckBox
                        android:id="@+id/cb_dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="저녁"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowRadius="2"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-7dp"
                    android:onClick="onCheckboxClicked"
                    android:text="1인 가구입니다"
                    android:textColor="@color/theme3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"/>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건강을 위해 배달 음식을 줄이고자 하는 분, \n간단한 요리를 원하시는 분은 체크해주세요."
                    android:textColor="#9A9A9A"
                    android:textSize="14sp"
                    android:shadowColor="#B3B3B3"
                    android:shadowRadius="2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-7dp"
                    android:onClick="onCheckboxClicked"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:text="체중을 조절하고 싶어요"
                    android:textColor="@color/theme3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="현재 몸무게와 목표 몸무게를 먼저 입력해 주세요."
                    android:textColor="#9A9A9A"
                    android:textSize="14sp"
                    android:shadowColor="#B3B3B3"
                    android:shadowRadius="2" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="현재 몸무게"
                            android:textColor="@color/theme3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:shadowColor="#B3B3B3"
                            android:shadowRadius="2" />

                        <EditText
                            android:id="@+id/et_currentWeight"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="end"
                            android:ems="10"
                            android:hint="kg"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="목표 몸무게"
                            android:textColor="@color/theme3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:shadowColor="#B3B3B3"
                            android:shadowRadius="2" />

                        <EditText
                            android:id="@+id/et_targetWeight"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            android:ems="10"
                            android:hint="kg"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-7dp"
                    android:onClick="onCheckboxClicked"
                    android:text="단 음식을 자주 먹어요"
                    android:textColor="@color/theme3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"  />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="일주일에 액상과당을 얼마나 자주 드시나요?"
                    android:textColor="#9A9A9A"
                    android:textSize="14sp"
                    android:shadowColor="#B3B3B3"
                    android:shadowRadius="2" />

                <RadioGroup
                    android:id="@+id/rg_sugarFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minWidth="0dp"
                    android:minHeight="0dp">

                    <RadioButton
                        android:id="@+id/rb_zeroOne"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:shadowColor="#B3B3B3"
                        android:shadowRadius="2"
                        android:text="0~1번"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rb_twoFour"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="2~4번"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2" />

                    <RadioButton
                        android:id="@+id/rb_fiveSeven"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="5~7번"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowRadius="2" />

                    <RadioButton
                        android:id="@+id/rb_Ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9번 이상"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btn_recmdCustomDiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/theme1"
                android:padding="12dp"
                android:text="맞춤 식단 받기"
                android:textSize="16sp"
                android:background="@drawable/btn_week"
                android:button="@null"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
