<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#CDCDCD"
        android:shadowRadius="7"
        android:textColor="@color/dark_sea_green"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="회원가입"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="아이디"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etJoinId"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/editTextLine"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColorHighlight="@color/textHighlight" />

                <Button
                    android:id="@+id/btn_idCheck"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_overlap"
                    android:backgroundTint="@color/dark_sea_green"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:text="중복확인"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <EditText
                android:id="@+id/etJoinPwd"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/editTextLine"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorHighlight="@color/textHighlight" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etJoinPwdCheck"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/editTextLine"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/textHighlight" />

                <Button
                    android:id="@+id/btn_PwdCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_overlap"
                    android:backgroundTint="@color/dark_sea_green"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="확인"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etJoinNickname"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/editTextLine"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColorHighlight="@color/textHighlight" />

                <Button
                    android:id="@+id/btn_nickCheck"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_overlap"
                    android:backgroundTint="@color/dark_sea_green"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="중복확인"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <TextView
                android:id="@+id/tvJoinBirth"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/editTextLine"
                android:gravity="center_vertical"
                android:hint="날짜를 선택하세요"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="키"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="4"/>

                    <EditText
                        android:id="@+id/etJoinHeight"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:backgroundTint="@color/editTextLine"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="cm"
                        android:inputType="numberDecimal"
                        android:textColorHighlight="@color/textHighlight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="몸무게"
                        android:textColor="@color/theme3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:shadowColor="#B3B3B3"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="4"/>

                    <EditText
                        android:id="@+id/etJoinWeight"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:backgroundTint="@color/editTextLine"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="kg"
                        android:inputType="numberDecimal"
                        android:textColorHighlight="@color/textHighlight" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="성별"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtn_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="20dp"
                        android:text=" 여성" />

                    <RadioButton
                        android:id="@+id/rbtn_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 남성" />
                </RadioGroup>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/theme3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#B3B3B3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="4"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etJoinEmail1"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/editTextLine"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColorHighlight="@color/textHighlight" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" @ "
                    android:textColor="@color/theme3" />

                <EditText
                    android:id="@+id/etJoinEmail2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/editTextLine"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColorHighlight="@color/textHighlight" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/border_line"
                android:background="#80F4F4F4"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_container"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="이용자 동의"
                    android:textColor="@color/theme3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"/>

                <TextView
                    android:id="@+id/tvUserAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbarFadeDuration="50000"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical"
                    android:text="@string/user_admin"
                    android:textColor="@color/dark_gray"
                    android:textColorHighlight="@color/textHighlight" />

                <CheckBox
                    android:id="@+id/cbox_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="동의합니다." />
            </LinearLayout>

            <Button
                android:id="@+id/btn_Join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/theme1"
                android:text="가입하기"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_login_overlap"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="10dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>