<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 부분 -->
    <stroke
        android:width="2.5dp"
        android:color="@color/theme2" />

    <!-- 배경색 부분 -->
    <solid
        android:color="@color/toast_background" />

    <!-- 패팅 부분 -->
    <padding
        android:left="15dp"
        android:bottom="15dp"
        android:right="15dp"
        android:top="15dp" />

    <!-- 테두리 모서리 부분 둥글게 설정 -->
    <corners
        android:radius="10dp" />

</shape>